<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_offset"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="宴会晚礼服2017新款一字肩短款学生聚会小"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="礼服连衣裙女新娘敬酒服"
        android:textColor="@android:color/black"
        android:textSize="15sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥288元"
        android:textColor="#ff9900"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格"
            android:textColor="#8A8A8A"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp">

            <TextView
                android:id="@+id/tv_good_detail_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="358"
                android:textColor="#8A8A8A"
                android:textSize="14sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_alignLeft="@+id/tv_good_detail_discount"
                android:layout_alignRight="@+id/tv_good_detail_discount"
                android:layout_centerVertical="true"
                android:background="#bb000000" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="运费0.00"
            android:textColor="#8A8A8A"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="月销395笔"
            android:textColor="#8A8A8A"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="江苏苏州"
            android:textColor="#8A8A8A"
            android:textSize="14sp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/grey_line_bg" />

    <LinearLayout
        android:id="@+id/ll_good_detail_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/da_ren_services_tick"
            android:drawablePadding="@dimen/spacing_tiny"
            android:text="担保交易"
            android:textSize="@dimen/font_smaller" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_smaller"
            android:drawableLeft="@mipmap/da_ren_services_tick"
            android:drawablePadding="@dimen/spacing_tiny"
            android:text="正品保障"
            android:textSize="@dimen/font_smaller" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_smaller"
            android:drawableLeft="@mipmap/da_ren_services_tick"
            android:drawablePadding="@dimen/spacing_tiny"
            android:text="赔运费险"
            android:textSize="@dimen/font_smaller" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_smaller"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/da_ren_services_tick"
            android:drawablePadding="@dimen/spacing_tiny"
            android:text="7天退换"
            android:textSize="@dimen/font_smaller" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/rightarrow" />
    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_line_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_small">

        <TextView
           android:textColor="#8A8A8A"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="包邮" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_large"
            android:text="满299元或两件包邮"
            android:textSize="@dimen/font_small" />
    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_line_bg"/>

    <RelativeLayout
        android:id="@+id/rl_good_detail_jin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_tinyer"
        android:padding="@dimen/spacing_small">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_border_original"
            android:paddingLeft="@dimen/spacing_tinyest"
            android:paddingRight="@dimen/spacing_tinyest"
            android:text="金"
            android:textColor="#F18459"
            android:textSize="@dimen/spacing_smaller" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/rightarrow" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/grey_line_bg" />

    <TextView
        android:id="@+id/tv_good_detail_cate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_gray_item"
        android:drawableRight="@mipmap/rightarrow"
        android:padding="@dimen/spacing_small"
        android:text="选择  产品分类" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/grey_line_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_small">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品评价" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="700dp"
            android:text="。。。" />
    </LinearLayout>
</LinearLayout>
